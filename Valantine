<script>
let steps = [
    "Seriously ğŸ˜",
    "Are you serious?",
    "Think one more time ğŸ¤”",
    "Think again ğŸ˜’",
    "Are you really serious?",
    "Ab maan bhi jao ğŸ˜©",
    "Last chance ğŸ˜¤",
    "One more chance ğŸ¥º",
    "Ab bas ho gayaâ€¦ YES bol do ğŸ˜"
];

let i = 0;

function noClick(){
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const text = document.getElementById("text");

    if(navigator.vibrate){
        navigator.vibrate(120);
    }

    noBtn.innerText = steps[i];
    text.innerText = steps[i];

    let w = yesBtn.offsetWidth;
    yesBtn.style.width = (w + 30) + "px";
    yesBtn.style.fontSize = (parseFloat(getComputedStyle(yesBtn).fontSize) + 3) + "px";

    if(i === steps.length - 1){
        noBtn.style.display="none";
        yesBtn.style.width="90%";
        yesBtn.style.fontSize="36px";
    }

    i++;
}

function yesClick(){
    document.getElementById("page1").style.display="none";
    document.getElementById("page2").style.display="flex";
    document.getElementById("kissSound").play();
    heartRain();
}

function heartRain(){
    setInterval(()=>{
        let h=document.createElement("div");
        h.className="heart";
        h.innerText="â¤ï¸";
        h.style.left=Math.random()*100+"vw";
        h.style.fontSize=(20+Math.random()*20)+"px";
        document.body.appendChild(h);
        setTimeout(()=>h.remove(),4000);
    },300);
}
</script>

